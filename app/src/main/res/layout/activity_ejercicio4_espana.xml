<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ejercicio4Espana">
    
    <TextView
        android:id="@+id/nombrePais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="30sp"/>

    <ImageView
        android:id="@+id/banderaPais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nombrePais"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/habitantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NÂº de habitantes: "
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/banderaPais"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/habitantesPais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/habitantes"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>